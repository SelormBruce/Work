@model Products   

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl"  alt="" class="design"/>
        <div class="caption">
            @*<h3 class="pull-right">@Model.Price GHC</h3>*@
            <h3>
                <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success " id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.Id">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>