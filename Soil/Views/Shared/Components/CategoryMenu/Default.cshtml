<li class="dropdown">
    <a asp-controller="Products"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Category<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Products" asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Products" asp-action="List" asp-route-category="">View all Categories</a>
        </li>
    </ul>
</li>